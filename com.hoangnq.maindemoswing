    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String textSearch=txtSearch.getText().toLowerCase().trim();
        String option=cbSearch.getSelectedItem().toString();
        //clos
        DefaultTableModel model=new DefaultTableModel();
        //get data from database lay du lieu tu database
        String sql="SELECT * FROM nhanvien";

        try {
            stmt=con.prepareStatement(sql);
            rs=stmt.executeQuery();
            // load column name // load tieu de cua cac cot
            ResultSetMetaData rsMD = rs.getMetaData();
            int zise=rsMD.getColumnCount();
            String[] arr= new String[zise];
            for(int i=0;i<zise;i++){
                arr[i]=rsMD.getColumnName(i+1).toUpperCase();
            }
            model.setColumnIdentifiers(arr);
            // search
            switch(option){
                case "Search_All":
                //
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    if(Arrays.toString(arr).contains(textSearch)){
                        model.addRow(arr);
                    }

                }
                break;
                case "Search_MaNV":
                //
                String sqlKH="SELECT * FROM nhanvien WHERE manhanvien LIKE ?";
                stmt=con.prepareStatement(sqlKH);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }
                break;
                case "Search_hoten":
                //
                String Search_hoten="SELECT * FROM nhanvien WHERE hoten LIKE ?";
                stmt=con.prepareStatement(Search_hoten);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }
                break;
                case "Search_ngaysinh":
                //
                String Search_ngaysinh="SELECT * FROM nhanvien WHERE ngaysinh LIKE ?";
                stmt=con.prepareStatement(Search_ngaysinh);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }
                break;
                case "Search_chucvu":
                //
                String Search_trangthai="SELECT * FROM nhanvien WHERE chucvu LIKE ?";
                stmt=con.prepareStatement(Search_trangthai);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }
                break;
                case "Search_diachi":
                //
                String Search_diachi="SELECT * FROM nhanvien WHERE diachi LIKE ?";
                stmt=con.prepareStatement(Search_diachi);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }

                break;
                case "Search_sdt":
                //
                String Search_sdt="SELECT * FROM nhanvien WHERE sdt LIKE ?";
                stmt=con.prepareStatement(Search_sdt);
                stmt.setString(1, "%"+textSearch+"%");
                rs=stmt.executeQuery();
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    model.addRow(arr);
                }
                break;
                default:
                while (rs.next()) {
                    for(int i=0;i<zise;i++){
                        arr[i]=rs.getString(i+1).toLowerCase();
                    }
                    if(Arrays.toString(arr).contains(textSearch)){
                        model.addRow(arr);
                    }

                }
                break;
                //                    break;
            }
        } catch (SQLException ex) {

        }
        txtSearch.setText("");
        tableStaff.setModel(model);

    }                                         

    private void btnListActionPerformed(java.awt.event.ActionEvent evt) {                                        
        showData();
    }                                       

    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {                                       

        isDisplay(true);
        String sql="INSERT INTO nhanvien(manhanvien,hoten,ngaysinh,chucvu,diachi,sdt) VALUES (?,?,?,?,?,?)";
//        String manv=txtManhanvien.getText();
        String manv=txtManhanvien.getText();
        String hoten=txtHoten.getText();
        String ngaysinh=txtNgaysinh.getText();
        String trangthai=txtChucvu.getText();
        String diachi=txtDiachi.getText();
        String sdt=txtSdt.getText();
        try {
            stmt=con.prepareStatement(sql);
            stmt.setString(1, manv);
            stmt.setString(2, hoten);
            stmt.setString(3, ngaysinh);
            stmt.setString(4, trangthai);
            stmt.setString(5, diachi);
            stmt.setString(6, sdt);
            //thuc hien cho cac cau lenh nhu: Update, delete, insert
            String sqlKH="SELECT * FROM nhanvien WHERE manhanvien LIKE ?";
            PreparedStatement stmtt =con.prepareStatement(sqlKH);
                stmtt.setString(1, manv);
            ResultSet rss=stmtt.executeQuery();
            if(rss.next()){
               JOptionPane.showMessageDialog(this, "ma khach hang da ton tai"); 
            }
            if(manv.equals("")||hoten.equals("")||ngaysinh.equals("")||
                trangthai.equals("")||diachi.equals("")||sdt.equals("")){
                JOptionPane.showMessageDialog(this, "vui long nhap lai thong tin");
                clear();
            }else{
                stmt.executeUpdate();
                clear();
            }

        } catch (SQLException ex) {

        }
        showData();
    }                                      

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here: nhanvien(manhanvien,hoten,ngaysinh,chucvu,diachi,sdt)
        isDisplay(true);
        if(tableCustomerRow()<0){
            JOptionPane.showMessageDialog(this, "vui long chon du lieu tu bang khach hang!");
        }else{
            isDisplay(true);
            String sql="UPDATE nhanvien SET manhanvien=?, hoten=?, ngaysinh=?,"
            + " chucvu=?, diachi=?, sdt=? WHERE manhanvien=?";
            try {
                    stmt=con.prepareStatement(sql);
                    stmt.setString(1, txtManhanvien.getText());
                    stmt.setString(2, txtHoten.getText());
                    stmt.setString(3, txtNgaysinh.getText());
                    stmt.setString(4, txtChucvu.getText());
                    stmt.setString(5, txtDiachi.getText());
                    stmt.setString(6, txtSdt.getText());
                    stmt.setString(7, txtManhanvien.getText());
                    //thuc hien cho cac cau lenh nhu: Update, delete, insert
                    stmt.executeUpdate();
            } catch (SQLException ex) {

            }
        }

        showData();
        clear();
//        isDisplay(false);

    }                                         

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(tableCustomerRow()<0){
            JOptionPane.showMessageDialog(this, "vui long chon du lieu de delete!");
        }else{
            //            isDisplay(true);
            String sql="DELETE FROM nhanvien WHERE manhanvien = ?";
            int choice= JOptionPane.showConfirmDialog(this, " Are you delete sure?");
            if(choice == JOptionPane.YES_OPTION){
                try {
                    int row=tableStaff.getSelectedRow();
                    String manhanvien=tableStaff.getValueAt(row, 0).toString();
                    stmt=con.prepareStatement(sql);
                    stmt.setString(1, manhanvien);
                    stmt.executeUpdate();
                } catch (Exception e) {
                }
            }
        }

        showData();
        clear();

    }                                         

