    private void tableStaffMouseClicked(java.awt.event.MouseEvent evt) {                                        
        isDisplay(true);
        int row=tableStaff.getSelectedRow();
        if(row != -1){
//            txtID.setText(tableStaff.getValueAt(row, 0).toString());
            txtManhanvien.setText(tableStaff.getValueAt(row, 0).toString());
            txtHoten.setText(tableStaff.getValueAt(row, 1).toString());
            txtNgaysinh.setText(tableStaff.getValueAt(row, 2).toString());
            txtChucvu.setText(tableStaff.getValueAt(row, 3).toString());
            txtDiachi.setText(tableStaff.getValueAt(row, 4).toString());
            txtSdt.setText(tableStaff.getValueAt(row, 5).toString());
        }
    }                                       

