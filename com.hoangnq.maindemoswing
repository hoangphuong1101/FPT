    }                                        

    private void jMenuItem6ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        JFileChooser chooser=new JFileChooser();
//        chooser.setCurrentDirectory(new File("D:\\HOANG NGUYEN\\java co ban\\de tai cuoi ki\\danhsach"));
          int i=chooser.showSaveDialog(this);
          if(i==JFileChooser.APPROVE_OPTION){
              File file=chooser.getSelectedFile();
            try {
                FileWriter out=new FileWriter(file+".xls");
                BufferedWriter bwrite=new BufferedWriter(out);
                
                
                DefaultTableModel model=(DefaultTableModel) tableStaff.getModel();
                // dat ten cot
                for (int j = 0; j < model.getColumnCount(); j++) {
                    bwrite.write(model.getColumnName(j)+"\t");
                    
                }
                bwrite.write("\n");
                //dat du lieu tung dong
                for (int j = 0; j < model.getRowCount(); j++) {
                    for (int k = 0; k < model.getColumnCount(); k++) {
                        bwrite.write(model.getValueAt(j, k)+"\t");
                    }
                    bwrite.write("\n");
                }
                bwrite.close();
                JOptionPane.showMessageDialog(this, "save thanh cong!!!");
            } catch (IOException ex) {
                JOptionPane.showMessageDialog(this, "save khong thanh cong!!!");
            }
              
          }
    }                                          

