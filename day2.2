<!DOCTYPE html>
<html>
<head>
	<style type="text/css"> 
		.header{
			width: 700px;
			margin: 0 auto;
			color: #fff;
			background: #5cb85c; 
			margin-top: 50px;
			padding: 10px;
			text-align: left;
			border-top-left-radius: 10px;
			border-top-right-radius: 10px;
		}
		input:focus { 
			background-color: yellow;
		}
		textarea:focus { 
			background-color: yellow;
		}
		select:focus { 
			background-color: yellow;
		}
		.mainwidth{
			width: 700px;
			margin: 0 auto; 
			padding: 15px; 
			border: 1px #4cae4c solid;
			border-bottom-left-radius: 10px;
			border-bottom-right-radius: 10px;
		}
	</style>
	<link rel="stylesheet" href="css/bootstrap.min.css">
	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<link href="css/jquery-ui.css" rel="stylesheet" type="text/css"/>  
	<script src="js/jquery-ui.min.js"></script> 
	<script type="text/javascript"> 
	   
		function validEmail(v) {
			var r = new RegExp("[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?");
			return (v.match(r) == null) ? false : true;
		}
		function validatePhone(txtPhone) {
			var a = txtPhone;
			var filter = /^((\+[1-9]{1,4}[ \-]*)|(\([0-9]{2,3}\)[ \-]*)|([0-9]{2,4})[ \-]*)*?[0-9]{3,4}?[ \-]*[0-9]{3,4}?$/;
			if (filter.test(a)) {
				return true;
			}
			else {
				return false;
			}
		}
		$(document).ready(function(){
			$("#btnRegister").click(function(){
				var email = $("#txtEmail").val(); 
				var pass = $("#txtPassword").val();
				var conpass = $("#txtConfirmPassword").val();
				var fullname = $("#txtFullName").val(); 
				var phone = $("#txtPhoneNo").val(); 
				if (email.length < 1){
					alert("Không được bỏ trống email");
					$("input#txtEmail").focus();  
					return false; 
				} 
				if (!validEmail(email)) {
					alert("Email không hợp lệ");
					$("input#txtEmail").focus();  
					return false;  
				} 
				if (pass.length < 1){
					alert("Không được bỏ trống password");
					$("input#txtPassword").focus();  
					return false; 
				}
				if (pass != conpass){
					alert("Mật khẩu không khớp");
					$("input#txtConfirmPassword").focus();  
					return false; 
				}
				if (fullname.length < 1){
					alert("Không được bỏ trống full name");
					$("input#txtFullName").focus();  
					return false; 
				} 
				var country = $("#cbCountry").val();
				if (country == ""){
					alert("Không được bỏ trống country");
					$('#cbCountry').focus();  
					return false;  
				}
				if (!validatePhone(phone)) {
					alert("Số điện thoại không hợp lệ");
					$("input#txtPhoneNo").focus();  
					return false;  
				} 
				var age = $("#cbAge").val();
				if (age == ""){
					alert("Không được bỏ trống age"); 
					$('#cbAge').focus();   
					return false;  
				} 
			});
		});
	</script>
	<title>Register Page</title>
</head>
<body>
</body>
<div class="container"> 
		<h2 class="header">Create an account</h2>
		<form class="form-horizontal mainwidth" action="success.htm">
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Email address: </label>
				<div class=" col-sm-9"> 
					<input type="text" id="txtEmail" class="form-control" placeholder="Enter Email">
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Password: </label>
				<div class=" col-sm-9"> 
					<input type="password" id="txtPassword" class="form-control" placeholder="Enter password">
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Confirm password: </label>
				<div class=" col-sm-9"> 
					<input type="password" id="txtConfirmPassword" class="form-control" placeholder="Enter confirm password">
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Full name: </label>
				<div class=" col-sm-9"> 
					<input type="text" id="txtFullName" class="form-control" placeholder="Enter full name">
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Address: </label>
				<div class=" col-sm-9"> 
					<textarea type="text" id="txtAddress" class="form-control" placeholder="Enter address" rows="4"></textarea>
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Country: </label>
				<div class=" col-sm-9"> 
					<select class="form-control" id="cbCountry" >
						<option value="">- Select country -</option>
						<option value="VN">Vietnam </option>
						<option value="US">United States </option>
						<option value="UK">United Kingdom </option>
						<option value="AU">Australia </option>
						<option value="SP">Singapore </option>
					</select>
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Phone No.: </label>
				<div class=" col-sm-9"> 
					<input type="text" id="txtPhoneNo" class="form-control" placeholder="Enter phone No">
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Sex: </label>
				<div class=" col-sm-9"> 
					<label class="checkbox-inline"><input type="radio" name="Sex" id="txtcbHorror">Male</label>
					<label class="checkbox-inline"><input type="radio" name="Sex"  value="Romance">Female</label>  
				</div>
			</div> 
			<div class="form-group">
				<label class="control-label col-sm-3" for="txtBookID">Age: </label>
				<div class=" col-sm-9"> 
					<select class="form-control" id="cbAge" >
						<option value="">– Select age – </option>
						<option value="Mrs">< 6</option>
						<option value="Miss">6 – 18 </option>
						<option value="Miss">18 – 22 </option>
						<option value="Miss">23 – 30 </option>
						<option value="Miss">30 – 40 </option>
						<option value="Miss">> 40 </option>
					</select>
				</div>
			</div>  
			<div class="form-group text-center">  
				<button type="submit" id="btnRegister" class="btn btn-success">Register</button>
				<button type="reset" class="btn btn-warning">Clear</button>
			</div>
		</form>
	</div>
</html>
