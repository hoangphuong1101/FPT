    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String textSearch=txtSearch.getText().toLowerCase().trim();
        String option=cbSearch.getSelectedItem().toString();
        //clos
        DefaultTableModel model=new DefaultTableModel();
        //get data from database lay du lieu tu database
        String sql="SELECT * FROM khachhang";
            
        try {
            stmt=con.prepareStatement(sql);
           rs=stmt.executeQuery();
            // load column name // load tieu de cua cac cot
            ResultSetMetaData rsMD = rs.getMetaData();
            int zise=rsMD.getColumnCount();
            String[] arr= new String[zise];
            for(int i=0;i<zise;i++){
                arr[i]=rsMD.getColumnName(i+1).toUpperCase();
            }
            model.setColumnIdentifiers(arr);
            // search
            switch(option){
                case "Search_All":
                    //
                    while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                            if(Arrays.toString(arr).contains(textSearch)){
                              model.addRow(arr);  
                            }

                    }
                    break;
                case "Search_MaKH":
                    //
                    String sqlKH="SELECT * FROM khachhang WHERE makhachhang LIKE ?";
                        stmt=con.prepareStatement(sqlKH);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    break;
                case "Search_hoten":
                    //
                    String Search_hoten="SELECT * FROM khachhang WHERE hoten LIKE ?";
                        stmt=con.prepareStatement(Search_hoten);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    break;
                case "Search_ngaysinh":
                    //
                    String Search_ngaysinh="SELECT * FROM khachhang WHERE ngaysinh LIKE ?";
                        stmt=con.prepareStatement(Search_ngaysinh);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    break;
                case "Search_trangthai":
                    //
                    String Search_trangthai="SELECT * FROM khachhang WHERE trangthai LIKE ?";
                        stmt=con.prepareStatement(Search_trangthai);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    break;
                case "Search_diachi":
                    //
                    String Search_diachi="SELECT * FROM khachhang WHERE diachi LIKE ?";
                        stmt=con.prepareStatement(Search_diachi);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    
                    break;
                case "Search_sdt":
                    //
                    String Search_sdt="SELECT * FROM khachhang WHERE sdt LIKE ?";
                        stmt=con.prepareStatement(Search_sdt);
                        stmt.setString(1, "%"+textSearch+"%");
                        rs=stmt.executeQuery();
                        while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                         model.addRow(arr);
                    }
                    break;
                default:
                    while (rs.next()) {
                        for(int i=0;i<zise;i++){
                            arr[i]=rs.getString(i+1).toLowerCase();
                        }   
                            if(Arrays.toString(arr).contains(textSearch)){
                              model.addRow(arr);  
                            }

                    }
                    break;
//                    break;
            }
        } catch (SQLException ex) {
            
        }
        txtSearch.setText("");
        tableCustomer.setModel(model);
        
        
        
        
        
    }                                         

    private void btnListActionPerformed(java.awt.event.ActionEvent evt) {                                        
        showData();
    }                                       

    private void jMenuItem6ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        JFileChooser chooser=new JFileChooser();
//        chooser.setCurrentDirectory(new File("D:\\HOANG NGUYEN\\java co ban\\de tai cuoi ki\\danhsach"));
          int i=chooser.showSaveDialog(this);
          if(i==JFileChooser.APPROVE_OPTION){
              File file=chooser.getSelectedFile();
            try {
                FileWriter out=new FileWriter(file+".xls");
                BufferedWriter bwrite=new BufferedWriter(out);
                
                
                DefaultTableModel model=(DefaultTableModel) tableCustomer.getModel();
                // dat ten cot
                for (int j = 0; j < model.getColumnCount(); j++) {
                    bwrite.write(model.getColumnName(j)+"\t");
                    
                }
                bwrite.write("\n");
                //dat du lieu tung dong
                for (int j = 0; j < model.getRowCount(); j++) {
                    for (int k = 0; k < model.getColumnCount(); k++) {
                        bwrite.write(model.getValueAt(j, k)+"\t");
                    }
                    bwrite.write("\n");
                }
                bwrite.close();
                JOptionPane.showMessageDialog(this, "save thanh cong!!!");
            } catch (IOException ex) {
                JOptionPane.showMessageDialog(this, "save khong thanh cong!!!");
            }
              
          }
    }                                          

