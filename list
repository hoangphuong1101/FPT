    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {                                       
        
        isDisplay(true);
        String sql="INSERT INTO khachhang(makhachhang,hoten,ngaysinh,trangthai,diachi,sdt) VALUES (?,?,?,?,?,?)";
        String makh=Makhachhang.getText();
        String hoten=Hoten.getText();
        String ngaysinh=Ngaysinh.getText();
        String trangthai=Trangthai.getText();
        String diachi=Diachi.getText();
        String sdt=Sdt.getText();
        try {
            stmt=con.prepareStatement(sql);
            stmt.setString(1, makh);
            stmt.setString(2, hoten);
            stmt.setString(3, ngaysinh);
            stmt.setString(4, trangthai);
            stmt.setString(5, diachi);
            stmt.setString(6, sdt);
            //thuc hien cho cac cau lenh nhu: Update, delete, insert
            String sqlKH="SELECT * FROM khachhang WHERE makhachhang LIKE ?";
            PreparedStatement stmtt =con.prepareStatement(sqlKH);
                stmtt.setString(1, makh);
            ResultSet rss=stmtt.executeQuery();
            if(rss.next()){
               JOptionPane.showMessageDialog(this, "ma khach hang da ton tai"); 
            }
            if(makh.equals("")||hoten.equals("")||ngaysinh.equals("")||
                    trangthai.equals("")||diachi.equals("")||sdt.equals("")){
                JOptionPane.showMessageDialog(this, "vui long nhap lai thong tin");
                clear();   
            }else{
                stmt.executeUpdate();
                clear();
            }
            

        } catch (SQLException ex) {

        }
        showData();
    }                                      

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(tableCustomerRow()<0){
            JOptionPane.showMessageDialog(this, "vui long chon du lieu de delete!");
        }else{
//            isDisplay(true);
                String sql="DELETE FROM khachhang WHERE makhachhang = ?";
            int choice= JOptionPane.showConfirmDialog(this, " Are you delete sure?");
            if(choice == JOptionPane.YES_OPTION){
                try {
                    int row=tableCustomer.getSelectedRow();
                    String id=tableCustomer.getValueAt(row, 0).toString();
                    stmt=con.prepareStatement(sql);
                    stmt.setString(1, id);
                    stmt.executeUpdate();
                } catch (Exception e) {
                    }
            }
        }
        
        showData();
        clear();
        
    }                                         

    private void tableCustomerMouseClicked(java.awt.event.MouseEvent evt) {                                           
        int row=tableCustomer.getSelectedRow();
        if(row != -1){
            isDisplay(true);
//            txtId.setText(tableCustomer.getValueAt(row, 0).toString());
            Makhachhang.setText(tableCustomer.getValueAt(row, 0).toString());
            Hoten.setText(tableCustomer.getValueAt(row, 1).toString());
            Ngaysinh.setText(tableCustomer.getValueAt(row, 2).toString());
            Trangthai.setText(tableCustomer.getValueAt(row, 3).toString());
            Diachi.setText(tableCustomer.getValueAt(row, 4).toString());
            Sdt.setText(tableCustomer.getValueAt(row, 5).toString());
        }
    }                                          

