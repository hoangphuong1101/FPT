    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here: makhachhang,hoten,ngaysinh,trangthai,diachi,sdt
        isDisplay(false);
        isDisplay(true);
        if(tableCustomerRow()<0){
            JOptionPane.showMessageDialog(this, "vui long chon du lieu tu bang khach hang!");
        }else{
        isDisplay(true);
        String makh=Makhachhang.getText();
        String hoten=Hoten.getText();
        String ngaysinh=Ngaysinh.getText();
        String trangthai=Trangthai.getText();
        String diachi=Diachi.getText();
        String sdt=Sdt.getText();
        
        String sql="UPDATE khachhang SET hoten=?, ngaysinh=?,"
                + " trangthai=?, diachi=?, sdt=? WHERE makhachhang=?";
        try {
                    stmt=con.prepareStatement(sql);
                    
                    stmt.setString(1, Hoten.getText());
                    stmt.setString(2, Ngaysinh.getText());
                    stmt.setString(3, Trangthai.getText());
                    stmt.setString(4, Diachi.getText());
                    stmt.setString(5, Sdt.getText());
                    stmt.setString(6, makh);
                    //thuc hien cho cac cau lenh nhu: Update, delete, insert
                    
                        stmt.executeUpdate();
                    
                    
                } catch (SQLException ex) {

                }
        }
        
        showData();
        clear();
        
        
    }                                         

